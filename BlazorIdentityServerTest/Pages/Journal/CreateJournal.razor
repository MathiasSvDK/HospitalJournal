@page "/Journal/Create"





<div class="page page-center" style="margin-top: -50px">
    <div class="container-tight">
        <div class="card card-md">
            <div class="card-body text-center py-4 p-sm-5" style="padding-bottom: 30px !important;">
                <h1>Opret ny Journal</h1>
                <p class="text-muted">Indtast patients informationer og vertificer det er den korrekte.</p>
            </div>
            <div class="hr-text hr-text-center hr-text-spaceless">Patient info</div>

            <div class="card-body">

                @if (CurrentStep == 1)
                {
                    <CreateJournalComp @bind-NextAvailable="NextAvailable"></CreateJournalComp>
                }
                <p>Opdateret i comp: @NextAvailable</p>

            </div>
        </div>
        <div class="row align-items-center mt-3">
            <div class="col-4">
                <div class="progress">
                    <div class="progress-bar" style='width: @(CurrentStep * 25)%'></div>
                </div>
            </div>
            <div class="col">
                <div class="btn-list justify-content-end">
                    <a class="btn btn-link link-secondary">
                        Gå tilbage
                    </a>
                    <a @onclick="NextStep" class='btn btn-primary @(NextAvailable ? "" : "disabled")'>
                        Fortsæt
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public bool NextAvailable { get; set; }
    public double CurrentStep { get; set; }
    public double TotalSteps { get; set; }
    protected override async Task OnInitializedAsync()
    {
        CurrentStep = 1;
        TotalSteps = 4;
        StateHasChanged();
    }

    public void NextStep()
    {
        CurrentStep += 1;
    }
    public void PrevStep()
    {
        CurrentStep -= 1;
    }
}