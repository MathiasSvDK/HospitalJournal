@page "/Patient/Search"
@inject UserManager<ApplicationUser> _userManager
@inject NavigationManager _navMan
@inject SwalService _swalService


<div class="page page-center" style="margin-top: -100px">
    <div class="container-tight py-4">
        <div class="text-center mb-4">
            <a href="." class="navbar-brand navbar-brand-autodark">
                <img src="./static/logo.svg" height="36" alt="">
            </a>
        </div>
        <div class="card card-md">
            <div class="card-body text-center">
                <h1>Søg efter patient</h1>
                <p class="text-muted">Indtast CPR på patient og find patient..</p>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Patient CPR</label>
                    <div class="input-group input-group-flat">
                        <input @bind="SearchCPR" type="text" class="form-control ps-1" autocomplete="off" data-np-checked="1">
                    </div>
                </div>
            </div>
        </div>
        <div class="row align-items-center mt-3">
            <div class="col-4">
            </div>
            <div class="col">
                <div class="btn-list justify-content-end">
                    <a @onclick="Search" class="btn btn-primary">
                        Søg
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


@code {
    public string SearchCPR { get; set; }

    public async void Search()
    {
        if (SearchCPR == null || SearchCPR == "")
        {
            await _swalService.Warning("Du skal indtaste et CPR nr");
        }
        else
        {
            ApplicationUser user = await _userManager.FindByNameAsync(SearchCPR);
            if (user != null)
            {
                _navMan.NavigateTo("/Patient/"+SearchCPR);
            }
            else
            {
                await _swalService.Error("Der kunne ikke findes en patient med dette CPR nr.");
            }
        }
    }
}